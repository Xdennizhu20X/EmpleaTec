rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Cualquiera puede leer las fotos de perfil (necesario para mostrarlas en la app)
    match /profile-photos/{userId}/{allPaths=**} {
      allow read;
    }

    // Solo un usuario autenticado puede escribir en su propia carpeta de fotos.
    // 1. La solicitud debe incluir un token de autenticaci√≥n (request.auth != null).
    // 2. El UID del usuario que hace la solicitud debe coincidir con el {userId} en la ruta.
    match /profile-photos/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}